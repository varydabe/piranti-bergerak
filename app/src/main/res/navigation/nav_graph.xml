<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/MainActivity">

    <activity
        android:id="@+id/MainActivity"
        android:name="com.lebahakatsuki.menuapp.MainActivity"
        android:label="@string/main_activity_label"
        tools:layout="@layout/activity_main">

        <action
            android:id="@+id/action_MainActivity_to_FoodActivity"
            app:destination="@id/FoodActivity" />
        <action
            android:id="@+id/action_MainActivity_to_DrinkActivity"
            app:destination="@id/DrinkActivity" />

    </activity>

    <activity
        android:id="@+id/FoodActivity"
        android:name="com.lebahakatsuki.menuapp.FoodActivity"
        android:label="@string/food_activity_label"
        tools:layout="@layout/activity_food">

        <action
            android:id="@+id/action_FoodActivity_to_DrinkActivity"
            app:destination="@id/DrinkActivity" />
    </activity>

    <activity
        android:id="@+id/DrinkActivity"
        android:name="com.lebahakatsuki.menuapp.DrinkActivity"
        android:label="@string/drink_activity_label"
        tools:layout="@layout/activity_drink">

        <action
            android:id="@+id/action_drinkActivity_to_FoodActivity"
            app:destination="@id/FoodActivity"/>
    </activity>
</navigation>