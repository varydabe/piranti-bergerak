<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lebahakatsuki.menuapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MenuApp">
        <activity android:name=".ui.main.view.activity.HistoryActivity" />
        <activity android:name=".ui.main.view.activity.AddMenuActivity" />
        <activity android:name=".ui.main.view.activity.ChooseMenuActivity" />
        <activity android:name=".ui.main.view.activity.SplashActivity" android:theme="@style/SplashScreenStyle">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.main.view.activity.MainActivity" />
    </application>

</manifest>